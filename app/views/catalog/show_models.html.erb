<%= turbo_frame_tag @year do %>
  <div class="flex flex-row">
    <div class="w-6 flex justify-center"> <!-- Line -->
      <div class="w-[2px] h-full bg-black"></div>
    </div>

    <div class="ml-2 mt-1">
      <div id="accordion-models" data-accordion="open" data-active-classes="bg-white text-gray-900" data-inactive-classes="text-gray-900">
        <% @models.each do |vehicle| %>
          <%= render layout: "accordion_item", locals: { item: vehicle, item_name: vehicle.vehicle_model.name } do %>
            <%= turbo_frame_tag vehicle, src: show_categories_catalog_index_path(params: { vehicle_id: vehicle }), loading: "lazy" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>