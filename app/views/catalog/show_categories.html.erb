<%= turbo_frame_tag @vehicle do %>
  <div class="flex flex-row">
    <div class="w-6 flex justify-center"> <!-- Line -->
      <div class="w-[2px] h-full bg-black"></div>
    </div>

    <div class="ml-2 mt-1">
      <div id="accordion-categories" data-accordion="open" data-active-classes="bg-white text-gray-900" data-inactive-classes="text-gray-900">
        <% @cats.each do |cat| %>
          <%= render layout: "accordion_item", locals: { item: cat, item_name: cat.name } do %>
            <%= turbo_frame_tag cat, src: show_types_catalog_index_path(params: { vehicle_id: @vehicle, product_category_id: cat }), loading: "lazy" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>