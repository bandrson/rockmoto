<%= turbo_frame_tag @category do %>
  <div class="flex flex-row">
    <div class="w-6 flex justify-center"> <!-- Line -->
      <div class="w-[2px] h-full bg-black"></div>
    </div>

    <div class="ml-2 mt-1">
      <div id="accordion-types" data-accordion="open" data-active-classes="bg-white text-gray-900" data-inactive-classes="text-gray-900">
        <% @types.each do |type| %>
          <%= render layout: "accordion_item", locals: { item: type, item_name: type.name } do %>
            <%= turbo_frame_tag type, src: show_products_catalog_index_path(params: { vehicle_id: @vehicle, product_type_id: type }), loading: "lazy" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>